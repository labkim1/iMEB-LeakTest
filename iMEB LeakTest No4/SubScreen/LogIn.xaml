                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ActiveCaptionColorKey}}"/>
            </Border.BorderBrush>
            <Label Content="사용자 계정" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
        </Border>
        <Border Grid.Column="1" Grid.Row="1" Margin="3,3,3,3">
            <Border.BorderBrush>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ActiveCaptionColorKey}}"/>
            </Border.BorderBrush>
            <ListBox VerticalAlignment="Center">
                <ListBoxItem>KMTS</ListBoxItem>
                <ListBoxItem>MOBIS</ListBoxItem>
